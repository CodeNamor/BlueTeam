<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/textTempView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="97dp"
        android:text="@string/text_temperature"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/abc_action_bar_default_height_material"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textTempView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTempView1"
        android:layout_marginTop="38dp"
        android:text="@string/number_two"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btnTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="76dp"

        android:text="@string/text_convert" />

    <EditText
        android:id="@+id/txtTempNumber2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/textTempView1"
        android:layout_alignTop="@+id/textTempView3"
        android:layout_below="@+id/textTempView1"
        android:layout_toRightOf="@id/txtTempNumber2"
        android:ems="2"
        android:inputType="number" />

    <TextView
        android:id="@+id/txtTempResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btnTemp"
        android:width="65dp"
        android:elevation="1dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignEnd="@+id/txtTempNumber2"
        android:layout_toEndOf="@+id/switch2" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:splitTrack="true"
        android:textOff="@string/text_FahrenheitToCelsius"
        android:textOn="@string/text_CelsiusToFahrenheit" />

    <TextView
        android:id="@+id/textTempView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/switch2"
        android:text="@string/text_switchText"
        android:textAppearance="?android:attr/textAppearanceMedium" />
</RelativeLayout>

